{
    "name": "itzen/yii2-comments",
    "description": "Comments module for Yii2 ",
    "keywords": ["yii2", "comments"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/itzen/yii2-comments/issues",
        "source": "https://github.com/itzen/yii2-comments"
    },
    "authors": [
        {
            "name": "Pawel Kania",
            "email": "pawel.kania@itzen.pl"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0",
        "itzen/yii2-status": "*"
    },
    "suggest": {
        "yiisoft/yii2-bootstrap": "Bootstrap css classes are used for styling",
        "itzen/yii2-setting": "Settings module for yii2 adjusted for using with AdminLte"
    },
    "autoload": {
        "psr-4": {
            "itzen\\comments\\": ""
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/itzen/yii2-setting"
        }
    ]
}
